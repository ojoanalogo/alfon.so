---
import { Picture } from "astro:assets";
import profile from "../assets/me.jpg";
import WorkItem from "../components/WorkItem.astro";
import {
workExperienceData,
type WorkExperience,
} from "../data/work-experience";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Sobre mí" navbarActiveItemID="cv">
  <section
    aria-label="Sección de información personal pública sobre Alfonso"
    class="bg-stone-950 border-2 border-dashed border-emerald-900 shadow-xl rounded-xl p-8"
  >
    <div class="flex flex-row justify-between items-center mb-10">
      <div class="avatar align-center drop-shadow-xl grow-0">
        <div class="w-32 h-32 rounded-full ring ring-emerald-600 shadow-xl">
          <Picture
            widths={[400]}
            src={profile}
            alt="Foto del autor del sitio"
          />
        </div>
      </div>
      <div class="grow ml-10 align-middle">
        <h1 class="md:text-2xl text-lg font-bold text-white drop-shadow-lg">
          Alfonso Reyes
        </h1>
        <p class="text-xs font-bold mt-1 text-emerald-500">Ingeniero backend</p>
        <p class="text-sm mt-2">📍 México</p>
        <p class="text-sm mt-2">✉️ hola[at]alfon.so</p>
      </div>
    </div>
    <div class="mt-2">
      <h2 class="text-md font-black">👨‍💻 Experiencia</h2>
      {
        workExperienceData.map((workItem: WorkExperience) => (
          <WorkItem data={workItem} />
        ))
      }
    </div>
    <!--     <div class="mt-2">
      <p class="text-md md:text-lg font-black">🛠️ Fortalezas</p>
      
    </div> -->
  </section>
</BaseLayout>
