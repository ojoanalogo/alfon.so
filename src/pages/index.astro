<script>
  function getRandomPhrase() {
    const phrases = [
      'console.log("Hello world!")',
      'print("Hola mundo!")',
      'System.out.println("Hola mundo!")',
      'echo "Hola mundo!"',
      'fmt.Println("Hello world!")',
