        <div class="space-y-2" role="list">
          {
            projects.map((project, index) => (
              <div
                class="group hover:bg-gray-800/50 p-1 rounded transition-colors"
                role="listitem"
              >
                {project.link ? (
                  <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block focus:outline-none focus:ring-2 focus:ring-emerald-800 focus:ring-offset-2 focus:ring-offset-gray-900 rounded"
                    aria-label={`Visitar ${project.title}: ${project.description}`}
                  >
                    <div class="flex items-start gap-2">
                      <span
                        class="text-gray-400 w-6 shrink-0"
                        aria-hidden="true"
                      >
                        {String(index + 1).padStart(2, "0")}.
                      </span>
                      <span
                        class="text-yellow-360 shrink-0"
                        role="img"
                        aria-label="Icono del proyecto"
                      >
                        {project.icon}
                      </span>
                      <div class="min-w-0 flex-1">
                        <span class="text-gray-400 group-hover:text-emerald-500 font-semibold">
                          {project.title}
                        </span>
                        <span class="text-gray-500 ml-2">
