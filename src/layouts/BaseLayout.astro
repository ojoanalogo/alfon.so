---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

import { SITE_DESCRIPTION, SITE_TITLE } from "../config";

const {
  image,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  navbarActiveItemID,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="bg-gray-100 text-neutral-700 selection:bg-cyan-700 selection:text-white">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body
    class="xl:w-[50rem] lg:w-4/6 md:w-4/5 w-full md:px-4 mx-auto font-sans"
  >
    <div>
      <Header navbarActiveItemID={navbarActiveItemID} />
      <main id="main" class="p-6">
        <slot />
      </main>
    </div>
    <noise>
    </noise>
  </body>
</html>
